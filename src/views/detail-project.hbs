{{> header}}
  {{> navbar}}

  <div class="container py-5">
    <h2 class="text-center mb-5 fw-bold">{{project.name}}</h2>
    <div class="row">
      <div class="col-7">
        <img src="{{project.image}}" alt="" class="w-100" style="height: 320px;">
      </div>
      <div class="col-5 px-5">
        <h5 class="mb-3">Duration</h5>
        <div>
          <i class="fa-regular fa-calendar-days me-2 fa-lg"></i>
          <span class="fw-medium">{{project.start_date}}</span> - <span class="fw-medium">{{project.end_date}}</span>
        </div>
        <div class="mt-3">
          <i class="fa-regular fa-clock me-2 fa-lg"></i>
          <span class="fw-medium">{{dateDiff project.start_date project.end_date}}</span>
        </div>
        <h5 class="mb-3 mt-5">Technologies</h5>
        <div>
          {{#each project.technologies}}
          <div class="mb-2">
            <img src="/assets/icon/{{this}}.svg" class="me-2" alt="" style="height: 22px;">
            <span class="fw-medium">{{this}}</span>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="mt-4 ">
        <h6>{{project.description}}</h6>
      </div>
    </div>
  </div>
  
{{> footer}}


  